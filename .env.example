# NeuroScope-Web Environment Configuration
# Copy this file to .env for local development
# cp .env.example .env

# =============================================================================
# Development Server
# =============================================================================

# Port for Vite dev server (default: 3001)
# VITE_PORT=3001

# Enable/disable HMR (Hot Module Replacement)
# VITE_HMR=true

# =============================================================================
# Model Configuration
# =============================================================================

# Default model to load on startup (optional)
# Options: 'Xenova/gpt2', 'Xenova/gpt2-medium'
# VITE_DEFAULT_MODEL=Xenova/gpt2

# Model cache location (browser IndexedDB by default)
# Set to 'false' to disable caching (not recommended)
# VITE_CACHE_MODELS=true

# Allow loading models from local filesystem (default: false)
# Only enable for development/research purposes
# VITE_ALLOW_LOCAL_MODELS=false

# =============================================================================
# Performance & Memory
# =============================================================================

# Maximum sequence length for generation (default: 100)
# Lower values use less memory
# VITE_MAX_SEQ_LENGTH=100

# Number of Web Workers for parallel processing (default: 1)
# Currently only 1 worker is supported
# VITE_NUM_WORKERS=1

# Enable WebGPU acceleration (experimental, default: false)
# Requires Chrome 113+ with WebGPU enabled
# VITE_ENABLE_WEBGPU=false

# =============================================================================
# Debugging & Development
# =============================================================================

# Enable verbose logging in worker
# VITE_DEBUG_WORKER=false

# Enable tensor shape validation (performance impact)
# VITE_VALIDATE_TENSORS=false

# Log model loading progress to console
# VITE_LOG_MODEL_PROGRESS=true

# Enable React DevTools profiling
# VITE_REACT_PROFILING=false

# =============================================================================
# Feature Flags (for development)
# =============================================================================

# Enable attention visualization (Session 2+)
# VITE_ENABLE_ATTENTION_VIZ=false

# Enable steering vectors (Session 5+)
# VITE_ENABLE_STEERING=false

# Enable embedding explorer (Session 4+)
# VITE_ENABLE_EMBEDDINGS=false

# =============================================================================
# API Keys (if needed for future features)
# =============================================================================

# Hugging Face API token (optional, for private models)
# Get from: https://huggingface.co/settings/tokens
# VITE_HF_TOKEN=

# Analytics/telemetry (if added in future)
# VITE_ANALYTICS_ID=

# =============================================================================
# Production Deployment
# =============================================================================

# Base URL for production deployment (default: /)
# VITE_BASE_URL=/

# Enable source maps in production (default: false)
# VITE_SOURCEMAP=false

# =============================================================================
# Experimental Features
# =============================================================================

# Use quantized models for faster loading (default: false)
# Trade-off: Slightly lower accuracy for 4x smaller downloads
# VITE_USE_QUANTIZED=false

# Enable SharedArrayBuffer optimizations (default: true)
# Requires COOP/COEP headers (configured in vite.config.ts)
# VITE_USE_SAB=true

# =============================================================================
# Notes
# =============================================================================
#
# 1. All VITE_ prefixed variables are exposed to the browser
#    - Never put secrets here (API keys, tokens)
#    - They will be bundled into the client-side JavaScript
#
# 2. To access in code:
#    const model = import.meta.env.VITE_DEFAULT_MODEL
#
# 3. To override during build:
#    VITE_DEFAULT_MODEL=Xenova/gpt2-medium npm run build
#
# 4. Changes to .env require restarting the dev server
#
# 5. See docs/ARCHITECTURE.md for detailed configuration guide
